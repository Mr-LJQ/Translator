{
  "name": "翻译助手",
  "manifest_version": 2,
  "version": "1.0.0",
  "description": "便捷的翻译器，提供了拖蓝翻译、热键翻译、搜索栏查询等多种查询翻译的能力，并且可以很方便的将翻译数据添加到Anki中进行复习。",
  "icons": {
    "48": "logo_48.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'",
  "background": {
    "scripts": ["./backendScript.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./contentScript.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "logo_16.png",
      "32": "logo_32.png",
      "64": "logo_64.png"
    },
    "default_popup": "browserAction.html",
    "default_title": "翻译助手"
  },
  "options_ui": {
    "page": "optionsPage.html"
  },
  "permissions": ["storage", "contextMenus", "<all_urls>"],
  "web_accessible_resources": ["translationPage.js", "translationPage.html"],
  "commands": {
    "switch_hotkey_and_selection_listener": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "打开/关闭热键及划词功能"
    },
    "open_search_box": {
      "suggested_key": {
        "default": "Alt+W"
      },
      "description": "打开/关闭搜索栏"
    },
    "show_translation_page": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "显示翻译窗口"
    }
  }
}
